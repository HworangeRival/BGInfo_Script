On Error Resume Next

Function GetExternalIP()
    Dim objHTTP, strURL
    strURL = "http://ifconfig.me/ip"
    
    Set objHTTP = CreateObject("MSXML2.XMLHTTP")
    objHTTP.open "GET", strURL, False
    objHTTP.send
    
    If objHTTP.Status = 200 Then
        GetExternalIP = Trim(objHTTP.responseText)
    Else
        GetExternalIP = "Error: " & objHTTP.Status
    End If
    
    Set objHTTP = Nothing
End Function

Dim strIP
strIP = GetExternalIP()

If Err.Number <> 0 Then
    strIP = "Error" & Err.Description
End If

Echo strIP
